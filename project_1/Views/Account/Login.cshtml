@model project_1.Models.LoginViewModel

@{
    ViewBag.Title = "Админка: вход";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3> Авторизируйтесь</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Введите логин и пароль:</p>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Логин:</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                <p>@Html.ValidationMessageFor(m => m.UserName)</p>
            </div>
            <div class="form-group">
                <label>Пароль:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <p>@Html.ValidationMessageFor(m => m.Password)</p>
            </div>
            <input type="submit" value="Log in" class="btn btn-primary" />
        }
    </div>
</div>