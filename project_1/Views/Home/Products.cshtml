@using project_1.Models
@model List<Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="general-wrapper">
    <div class="container">
        <img src="~/Images/@ViewBag.ImageName" style="height:75%; width:75%; margin-top:20px;" />
        <h1>@ViewBag.Name</h1>
        <p class="lead">
            @ViewBag.Description
        </p>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-xs-12 col-sm-9 col-md-6 col-lg-4">
                    <div class="thumbnail">
                        <img src="~/Images/@product.ImageName" />
                        <div class="caption text-center">
                            <h3>@product.Name</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



